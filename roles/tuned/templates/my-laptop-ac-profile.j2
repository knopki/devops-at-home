[main]
summary=Optimize for laptop on AC
include=desktop


[audio]
reset_controller = 1


[cpu]
governor = intel_pstate
no_turbo = 0


[disk]
devices = sda
spindown = 0


[sysctl]


[sysfs]
# Autosuspend for USB device AW1517 [Alienware]
/sys/bus/usb/devices/1-4/power/control=on

# Runtime PM for PCI Device Qualcomm Atheros Killer E2400 Gigabit Ethernet Controller
/sys/bus/pci/devices/0000:3b:00.0/power/control=on

# Runtime PM for PCI Device Qualcomm Atheros QCA6174 802.11ac Wireless Network Adapter
/sys/bus/pci/devices/0000:3c:00.0/power/control=on

# Runtime PM for PCI Device Samsung Electronics Co Ltd NVMe SSD Controller SM951/PM951
/sys/bus/pci/devices/0000:3e:00.0/power/control=on

# Runtime PM for PCI Device Intel Corporation HD Graphics 530
/sys/bus/pci/devices/0000:00:02.0/power/control=on

# Runtime PM for I2C Adapter i2c-7 (NVIDIA i2c adapter 2 at 1:00.0)
/sys/bus/i2c/devices/i2c-7/device/power/control=on

# Runtime PM for I2C Adapter i2c-8 (NVIDIA i2c adapter 6 at 1:00.0)
/sys/bus/i2c/devices/i2c-8/device/power/control=on

[usb]
autosuspend = 0
