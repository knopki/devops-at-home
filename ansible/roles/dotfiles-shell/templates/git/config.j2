[core]
whitespace = space-before-tab,-indent-with-non-tab,trailing-space
quotepath = off
attributesfile = {{ lookup('env','XDG_CONFIG_HOME') }}/git/info/attributes
ignorefile = {{ lookup('env','XDG_CONFIG_HOME') }}/git/info/ignore

[log]
decorate = short
abbrevCommit = true

[push]
default = current # or simple?
followTags = true

[apply]
whitespace = fix

[color]
ui = auto

[color "branch"]
current = yellow reverse
local = yellow
remote = green

[color "diff"]
meta = yellow bold
frag = magenta bold # line info
old = red # deletions
new = green # additions

[color "status"]
added = yellow
changed = green
untracked = cyan

[diff]
renames = copies

[diff "bin"]
# Use `hexdump` to diff binary files
textconv = hexdump -v -C

# [diff "odf"]
# binary = true
# textconv = odt2txt

[help]
# Automatically correct and execute mistyped commands
autocorrect = 1

[merge]
log = true
ff = only
conflictstyle = diff3

[rebase]
autosquash = true

[include]
path = local

[alias]
prune = fetch --prune
undo-last-commit = reset --soft HEAD^
glog = log --graph --pretty=format:'%Cred%h%Creset -%C(yellow)%d%Creset %s %Cgreen(%cr) %C(bold blue)<%an>%Creset'
st = status
co = checkout

[commit]
gpgSign = true

[status]
showUntrackedFiles = all

[transfer]
fsckobjects = true

[gpg]
program = gpg2

[filter "lfs"]
clean = git-lfs clean -- %f
smudge = git-lfs smudge -- %f
process = git-lfs filter-process
required = true

{% if git_name or git_email %}
[user]
{% endif %}
